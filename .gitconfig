[user]
	name = username
	email = user.email@mail.com

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%C(auto)%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  df = diff
  dc = diff --cached
  ign = ls-files -o -i --exclude-standard --directory
  dt = difftool
  mt = mergetool

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
	tool = diffuse

[diff]
	tool = diffuse

[pager]
	status = true
	show-branch = true

[core]
	autocrlf = input

[push]
	default = simple
